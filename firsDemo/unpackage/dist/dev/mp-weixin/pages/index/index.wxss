.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.container {
  padding: 20px;
  font-size: 14px;
  line-height: 24px;
}
.container .uni-list {
  display: flex;
  flex-wrap: wrap;
}
.container .uni-list .uni-list-cell {
  border-bottom: 1px solid #eee;
}
.container .uni-list .uni-list-cell .uni-media-list {
  display: flex;
}
.container .uni-list .uni-list-cell .uni-media-list .uni-media-list-logo {
  width: 80px;
  height: 80px;
  flex: none;
}
.container .uni-list .uni-list-cell .uni-media-list .uni-media-list-body {
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 5px 0;
}
.container .uni-list .uni-list-cell .uni-media-list .uni-media-list-text-top {
  line-height: 1.6em;
}
.container .uni-list .uni-list-cell .uni-media-list .uni-media-list-text-bottom {
  display: block;
}

